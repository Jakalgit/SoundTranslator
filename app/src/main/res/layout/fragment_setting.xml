<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentSetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSetting">

    <ImageView
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/screen_background_dark" />

    <Button
        android:id="@+id/btnApp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/drawable_rectangle"
        android:text="Приложение "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#212121"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnAcc"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnAcc"
        app:layout_constraintTop_toBottomOf="@+id/btnAcc" />

    <TextView
        android:id="@+id/textSett"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/drawable_rectangle"
        android:gravity="center"
        android:text="Настройки"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#212121"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAcc"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/drawable_rectangle"
        android:text="Аккаунт"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#212121"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textSett"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textSett"
        app:layout_constraintTop_toBottomOf="@+id/textSett" />

    <ImageView
        android:id="@+id/imgUser1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/user100px"
        app:layout_constraintBottom_toBottomOf="@+id/btnAcc"
        app:layout_constraintStart_toStartOf="@+id/btnAcc"
        app:layout_constraintTop_toTopOf="@+id/btnAcc" />

    <ImageView
        android:id="@+id/imgUser2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/user100px"
        app:layout_constraintBottom_toBottomOf="@+id/btnAcc"
        app:layout_constraintEnd_toEndOf="@+id/btnAcc"
        app:layout_constraintTop_toTopOf="@+id/btnAcc" />

    <ImageView
        android:id="@+id/imageSett1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/sett100px"
        app:layout_constraintBottom_toBottomOf="@+id/btnApp"
        app:layout_constraintStart_toStartOf="@+id/btnApp"
        app:layout_constraintTop_toTopOf="@+id/btnApp" />

    <ImageView
        android:id="@+id/imageSett2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/sett100px"
        app:layout_constraintBottom_toBottomOf="@+id/btnApp"
        app:layout_constraintEnd_toEndOf="@+id/btnApp"
        app:layout_constraintTop_toTopOf="@+id/btnApp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/back100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

